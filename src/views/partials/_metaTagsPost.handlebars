<head>
  <title>{{titulo}} | {{user.user_name}}</title>
  <meta name="author" content="{{user.user_name}}">
  <meta name="title" content="{{titulo}} | {{descricao}} | {{user.user_name}}">
  <meta name="description" content="{{titulo}} | {{descricao}}">
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content="https://www.bwlog.dev/posts/{{slug}}">
  <meta property="og:title" content="{{user.user_name}}">
  <meta property="og:description" content="{{titulo}} | {{descricao}}">
  <meta property="og:image:width" content="300">
  <meta property="og:image:height" content="300">
  <meta property="og:image" content="{{user.banner}}">
  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image">
  <meta property="twitter:url" content="https://www.bwlog.dev/posts/{{slug}}">
  <meta property="twitter:title" content="{{titulo}} | {{descricao}} | {{user.user_name}}">
  <meta property="twitter:description" content="{{titulo}} | {{descricao}} | {{user.user_name}}">
  <meta property="twitter:image" content="{{user.banner}}">
  <!-- MS, fb & Whatsapp -->
  <!-- MS Tile - for Microsoft apps-->
  <meta name="msapplication-TileImage" content="{{user.banner}}">
  <!-- fb & Whatsapp -->
  <!-- Site Name, Title, and Description to be displayed -->
  <meta property="og:site_name" content="{{user.user_name}} | bwlog">
  <meta property="og:title" content="{{titulo}}">
  <meta property="og:description" content="{{titulo}} | {{descricao}}">
  <!-- Website to visit when clicked in fb or WhatsApp-->
  <meta property="og:url" content="http://www.bwlog.dev/posts/{{slug}}">
</head>