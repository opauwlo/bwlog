<form action="" method="post">

  <div class="row p-2">
    <div class="mx-auto">
      <!-- Profile widget -->
      <div class="overflow-hidden">
        <div class="px-3 pt-0 pb-4 cover rounded-3 mb-2">
          <div class="media align-items-end profile-head rounded-circle">

            <div class="profile mr-3 position-relative">

              <label
                class="position-absolute top-0 start-100 translate-middle badge p-2 bg-secondary rounded-circle"
                for="profile"
              > <i class="fs-6 bi bi-pencil-square"> </i></label>
              <input id="profile" type="file" accept="image/*" />

              <label for="profile">
                <img
                  id="imgProfile"
                  src="{{user.dataValues.foto}}"
                  alt="..."
                  width="100"
                  height="100"
                  class="rounded-3 border-3 border-dark shadow-lg"
                />
              </label>
            </div>
            <div class="media-body mb-4 text-white position-relative">
              <label
                for="user_name"
                class="position-absolute top-0 start-12 translate-middle badge p-2 bg-secondary rounded-circle"
                for="profile"
              >
                <i class="fs-6 bi bi-pencil-square"> </i>
              </label>
              <input
                id="user_name"
                class="overflow-hidden text-white mt-1 mb-1 input-name"
                type="text"
                name="autor"
                autocomplete="off"
                placeholder=" "
                value="{{user.dataValues.user_name}}"
              />
              <p class="small mb-4">
                <i class="fas fa-map-marker-alt mr-2"></i>#
                {{user.dataValues.id}}</p>
            </div>
          </div>
        </div>

        <div class="mt-5">
          <h5 class="mb-1 mt-2 text-white">Sobre</h5>
          <div class="p-4 mt-4 rounded shadow-sm bg position-relative">
            <label
              for="descricao"
              class="position-absolute top-0 start-0 translate-middle badge p-2 bg-secondary rounded-circle"
              for="profile"
            >
              <i class="fs-6 bi bi-pencil-square"> </i>
            </label>
            <input
              id="descricao"
              class="overflow-hidden font-italic text-white-50 mb-0 input-sobre"
              type="text"
              name="autor"
              autocomplete="off"
              value=" {{user.dataValues.descricao}}"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</form>

<script>
  const profile = document.getElementById('profile'); const imgProfile =
  document.getElementById('imgProfile'); profile.addEventListener('change', (e)
  => { const formData = new FormData(); formData.append('image',
  e.target.files[0]);
  fetch('https://api.imgbb.com/1/upload?key=9498af09cd8ff43d32f69177904698a3', {
  method: 'POST', body: formData }).then(res => res.json()).then(res => {
  imgProfile.src = res.data.image.url; }); });
</script>