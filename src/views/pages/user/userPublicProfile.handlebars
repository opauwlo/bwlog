{{> _metaTagsPublicProfile}}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
  integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
<link rel="stylesheet" href="../../css/build.css" async defer>
<link rel="stylesheet" href="../../css/custom.css" async defer>

<div class="p-2 ">
  <div class=" mx-auto">
    <!-- Profile widget -->
    <div class="overflow-hidden">
      <div class="px-3 pt-0 pb-4 rounded-3 mb-5"
        style="background-image: url({{user.banner}}); background-size: cover; background-repeat: no-repeat">
        <div class="media align-items-end profile-head rounded-circle">
          <div class="profile mr-3 rounded-circle"><img src="{{user.profile}}" alt="..." width="110"
              style="object-fit: cover;" class="rounded-3 border-3 border-dark shadow-lg"></div>
          <div class="media-body mb-4 text-white">
            <h4 class="mt-1 mb-1 bg-text">{{user.user_name}}</h4>
            <p class="small mb-4 bg-text"> <i class="fas fa-map-marker-alt mr-2"></i># {{user.id}}</p>
          </div>
        </div>
      </div>
      <div class="mt-5" style="margin-top: 60px !important;">
        <h5 class="mb-1 mt-2 text-white">Sobre</h5>
        <div class="p-4 rounded shadow-sm bg">
          <p class="font-italic text-white-50 mb-0" style="word-break: break-word;">{{user.descricao}}</p>
        </div>
      </div>
    </div>
  </div>
  
</div>
<section class="end my-1 mx-2">
  <div class="a2a_kit a2a_kit_size_32 a2a_default_style bg-black"
    data-a2a-url="https://www.bwlog.dev/autor/{{user.id}}/{{user.user_name}}" data-a2a-title="{{user.user_name}}">
    <a class="a2a_button_copy_link"></a>
    <a class="a2a_button_twitter"></a>
    <a class="a2a_button_telegram"></a>
    <a class="a2a_button_whatsapp"></a>
    <a class="a2a_button_facebook"></a>
  </div>
  <script async src="https://static.addtoany.com/menu/page.js"></script>
</section>
<div class=" new-post p-2 text-light">
  <div class="card text-white bg">
    <div class="new-post p-2 ">
      <ul class="nav nav-pills nav-justified mb-3 " id="pills-tab" role="tablist">
        <li class="nav-item " role="presentation">
          <button class="nav-link active shadow border-3" id="pills-home-tab" data-bs-toggle="pill"
            data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home"
            aria-selected="true">Posts</button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link shadow border-3" id="pills-textlist-tab" data-bs-toggle="pill"
            data-bs-target="#pills-textlist" type="button" role="tab" aria-controls="pills-textlist"
            aria-selected="false">Textlists</button>
        </li>
      </ul>
    </div>
  </div>
</div>
<div class="tab-content " id="pills-tabContent">
  <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
    <section class="row row-cols-md-1" data-masonry='{"percentPosition": true }'>
      {{#each posts}}
      {{#if publicado}}
      {{#if @first}}
        <a class="col-lg-6 rounded-3 mb-1" href="/post/{{slug}}">
        <div class="post">
          <div class="card m-2 text-center">
            <img class="post_cover_img mb-1" src="{{banner_img}}" alt="" width="1000" height="420" style="padding: 0rem !important;">
            <div class="card-body px-3 bg border border-dark shadow rounded rounded-2">
              <h1 class="card-title text-titulo text-light mb-1">
                {{titulo}}
              </h1>
              <p class="text-white-50 text-format text-descricao" style="margin-bottom: 0;">
                {{descricao}}
              </p>
              <small class="card-text text-info my-1 text-autor">
                by: {{user.user_name}}
              </small>        
            </div>
          </div>
        </div>
        </a>
      {{else}}
      <a class="col-lg-6 rounded-3 mb-1" href="/post/{{slug}}">
      <div class="post">
        <div class="card m-2 text-center">
          <div class="card-body px-3 bg border border-dark shadow rounded rounded-2">
            <h1 class="card-title text-titulo text-light fs-3 mb-1">
              {{titulo}}
            </h1>
            <p class="text-white-50 text-format text-descricao" style="margin-bottom: 0;">
              {{descricao}}
            </p>
            <small class="card-text text-info my-1 text-autor">
              by: {{user.user_name}}
            </small>        
          </div>
        </div>
      </div>
      </a>  
      {{/if}}
      {{/if}}
      {{/each}}
    </section>

  </div>
  <div class="tab-pane fade" id="pills-textlist" role="tabpanel" aria-labelledby="pills-textlist-tab">
    <section class="row row-cols-md-1">
      {{#each textlists }}
      <div class="col-lg-6 rounded-3 mb-3">
        <a href="/textlist/{{id}}/{{slug}}">    
          <div class="card m-2 shadow text-center ">
            <div class="card-body px-3 bg">
              <h2 class="card-title text-titulo text-light mb-2">{{titulo}}</h2>
            </div>
          </div>
        </a>
      </div>
      {{/each}}
    </section>
  </div>

<script async src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
