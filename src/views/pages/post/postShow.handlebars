{{> _metaTagsPost}}
{{> _markdownCss}}

<div class="row">
  <div class="col-12 col-lg-9 mt-4">
    <div class="bg rounded-3 mt-1 mb-3 p-1 m-1">
      <img class="post_cover_img" src="{{post.banner_img}}" width="1000" height="420">
      <section class="mx-2 mt-3 w-auto">
        <div class="d-flex align-items-center text-light border border-dark rounded-pill">
          <div class="flex-shrink-0">
            <img class="center rounded-circle border-secondary" src="{{post.user.profile}}" width="55" height="55"
              style="object-fit: cover;" alt="profile picture" />
          </div>
          <div class="flex-grow-0 float-start text-profile">
            <a class="text_dec ml-4 text-white-50 fs-6" href="/autor/{{post.user.id}}/{{post.user.user_name}}">
              {{post.user.user_name}} {{{checkIfIsVerified post.user.verify_user}}}
            </a>
          </div>
        </div>
      </section>
      <div class="card-body">
        <div class="text-white">
          <h1 class="mb-3  text-titulo not-overflow-text" style="margin-top: 30px; font-size: 1.875rem !important;">
            {{post.titulo}}
          </h1>
        </div>
        <hr class="text-white-50 shadow-lg mb-5">
        <section class="text-white-50">
          <article id="content" class="not-overflow-text" >
            <div id="viewer" style="font-size: 1.125rem !important;">
            </div>
          </article>
        </section>
        <p class="text-secondary mt-2 fst-italic fs-6 text-end">
          {{__ "post_show.published_in"}} {{#formatDate post.createdAt}} {{/formatDate}}
        </p>
        {{#if post.editado}}
        <p class="fw-light fst-normal text-blue text-end">
          {{__ "post_show.post_edited"}}
        </p>
        {{/if}}
      </div>
      <section class="mb-3 bg center show-mobile">
        <div class="a2a_kit a2a_kit_size_32 a2a_default_style" data-a2a-url="https://www.bwlog.dev/post/{{post.slug}}"
          data-a2a-title="{{post.titulo}}" style="justify-content: space-between !important;">
          <a class="a2a_button_copy_link"></a>
          <a class="a2a_button_twitter"></a>
          <a class="a2a_button_linkedin"></a>
          <a class="a2a_button_reddit"></a>
          <a class="a2a_button_facebook"></a>
          <a class="a2a_button_telegram"></a>
          <a class="a2a_button_whatsapp"></a>
        </div>
      </section>
    </div>
    {{#if haveTextlist}}
    <div class="card bg text-light border-dark rounded-2 mb-4">
      <div class="card-body d-grid bg">
        <h5 class="card-title">{{__ "post_show.is_textlist"}} <strong class="text-info">{{textlist.titulo}}</strong>
        </h5>
        <a href="/textlist/{{textlist.id}}/{{textlist.slug}}" class="btn btn-dark">{{__ "post_show.read_more"}}</a>
      </div>
    </div>
    {{/if}}

    <hr class="text-white">
    {{> _disques}}

  </div>
  <div class="col-12 col-lg-3 position-fixed end-0 mt-2 mr-5 display-mobile hidden-margin">
    <section class="mb-1 center-no-height hidden-mobile center-no-height">
      <div class="a2a_kit a2a_kit_size_32 a2a_default_style rounded-3 p-1 bg"
        data-a2a-url="https://www.bwlog.dev/post/{{post.slug}}" data-a2a-title="{{post.titulo}}"
        style="justify-content: space-between !important;">
        <a class="a2a_button_copy_link"></a>
        <a class="a2a_button_twitter"></a>
        <a class="a2a_button_linkedin"></a>
        <a class="a2a_button_reddit"></a>
        <a class="a2a_button_facebook"></a>
        <a class="a2a_button_telegram"></a>
        <a class="a2a_button_whatsapp"></a>
      </div>
    </section>
    <div class="card bg rounded-3 mb-2 mx-1">
      <img src="{{post.user.banner}}" class="profile_cover_img card-img-top" alt="..." height="110px">
      <img src="{{post.user.profile}}" class="rounded-3 my-5 mx-2 position-absolute" style="object-fit: cover;"
        alt="..." width="80" height="80">
      <div class="card-body my-4 text-white" style="margin-bottom: 0 !important;">
        <div class="d-grid gap-1 mb-3">
          <a href="/autor/{{post.user.id}}/{{post.user.user_name}}" class="btn btn-light border-secondary  fw-bold">{{__
            "post_show.see_profile"}}</a>
        </div>
        <h5 class="card-title mb-2 text-titulo">
          <a class="text-white" href="/autor/{{post.user.id}}/{{post.user.user_name}}">
            <strong>{{post.user.user_name}}</strong>{{{checkIfIsVerified post.user.verify_user}}}
          </a>
        </h5>
        <p class="card-text text-resume">{{post.user.descricao}}</p>
        <span class="text-white-50 small float-end end">
          {{__ "data.since"}} {{#formatDateTime post.user.createdAt}}

          {{/formatDateTime}}
        </span>
      </div>
    </div>
    {{#if recommendations}}
    <h4 class="text-white text-center"> <strong class="text-white-50">{{__ "post_show.may_be_interested"}}:</strong>
    </h4>
    {{#each recommendations}}
    <a class="rounded-3 post" href="/post/{{slug}}">
      <div class="card my-2 mx-1">
        <div class="card-body bg border border-dark shadow rounded rounded-2">
          <h1 class="text-resume card-title text-titulo text-light fs-2 mb-2 text-light">
            {{titulo}}
          </h1>
          <p class="text-resume text-white-50 fs-6 text-format text-descricao" style="margin-bottom: 0;">
            {{descricao}}
          </p>
        </div>
      </div>
    </a>
    {{/each}}
    {{/if}}
  </div>
</div>
{{>_markdownJs}}

<script>
  let editor = window.renderPost(`{{{conteudo}}}`);
</script>
