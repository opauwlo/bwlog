<form action="/add" method="POST" class="p-3" id="form" enctype="multipart/form-data">

  <label for="bannerInput" class="bg p-2 my-2 mb-3 text-white">Imagem de capa
    <label class="text-white" for="bannerInput">
      <i class="text-white-50 fs-6 bi bi-pencil-square "></i>
    </label>
    <label class="d-grid" for="bannerInput">
      <img id="postBannerImg" class="img-fluid post_cover_img" src="" alt="" width="1000" height="420">
    </label>
  </label>
  <input name="bannerInput" id="bannerInput" type="file" accept="image/*" />

  <div class="form mb-3 p-2 mx-auto">
    <input type="text" name="titulo" id="titulo" class="form__input bg rounded-3" maxlength="40" autocomplete="off"
      placeholder=" " required>
    <label for="titulo" class="form__label rounded-3">Título</label>
  </div>

  <div class="mb-4" style="padding: 0.2rem !important;">
    <label for="validationTextarea" class="form-label text-white">Conteúdo do post</label>
    <textarea name="conteudo" class="form-control" id="validationTextarea" > </textarea>
  </div>

  <div class="form mb-3 p-2 mx-auto">
    <input type="text" id="descricao" name="descricao" class="form__input bg rounded-3" maxlength="60" autocomplete="off"
      autocomplete="on" placeholder=" " required>
    <label for="descricao" class="form__label rounded-3">Descriçao</label>
  </div>

  <div class="mb-3 mt-3" style="padding: 0.2rem !important;">
    <label for="textlist" class="form-label text-white" for="textlist">Adcianar à textlist: <a
        class="ml-5 text-info float-end" href="/novo/textlist" target="_blank" style="text-decoration: none;"
        rel="noopener noreferrer">Crie uma textlist</a> </label>
    <select class="form-select bg text-white border border-secondary" id="textlist" name="textlist">
      <option selected value="NULL"> Sem Textlist </option>
      {{#each textlist}}
      <option value="{{id}}"> {{titulo}} </option>
      {{/each}}
    </select>

  </div>

  <input id="publicado" name="publicado" type="hidden" name="publicado" value="0" />
  <input id="btn-enviar" type="submit" onclick="this.form.publicado.value=1" class="btn-submit btn btn-light mx-1"
    value="Enviar">
  <input id="btn-rasc" type="submit" class="btn btn-dark mx-1" value="Rascunho">
  <div id="load" class="bg-dark">

  </div>
</form>

{{> _scriptRenderPreviewImgPost}}
{{> _ckeditorJs}}