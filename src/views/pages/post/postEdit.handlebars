<form action="/update/{{post.dataValues.u_id}}" method="POST" class="p-3" id="form" enctype="multipart/form-data">
  {{>_msgAlert}}
  <label for="bannerInput" class="center bg m-2 mb-2 text-white">Imagem de capa
    <i class="m-1 p-2 bi bi-image"></i>
  </label>
  <label for="bannerInput" class="m-2 center">
    <img onload="addBtn()" id="postBannerImg" class="post_cover_img mb-2 border border-secondary" src="{{post.dataValues.banner_img}}">
  </label>
  <input name="bannerInput" id="bannerInput" type="file" accept="image/*" />
  <button hidden id="remove" onclick="resetInput()" type="button" class="btn center m-2 mb-3 bg text-danger">Remover Imagem</button>


  <div class="form mb-3 p-2 my-3 mx-auto rounded-3 bg">
    <input type="text" id="titulo" name="titulo" class="rounded-3 form__input" autocomplete="off" maxlength="40"
      placeholder=" " value="{{post.dataValues.titulo}}" required>
    <label for="titulo" class="form__label rounded-3">Título</label>
  </div>

  <div class="mb-4" style="padding: 0.2rem !important;">
    <label class="form-label text-light">Conteudo do post</label>
    <textarea name="conteudo" class="ck-content" id="validationTextarea">
        {{{post.dataValues.conteudo}}}
      </textarea>
  </div>

  <div class="form mb-3 p-2 mx-auto">
    <input type="text" id="descricao" name="descricao" class="form__input bg rounded-3" maxlength="60" autocomplete="off" placeholder=" " value="{{post.dataValues.descricao}}" required>
    <label for="descricao" class="form__label rounded-3">Descriçao</label>
  </div>

  <div class="mb-3 mt-3" style="padding: 0.2rem !important;">
    <label class="form-label text-white" for="floatingInput">Adcianar à textlist: <a class="ml-5 text-info float-end"
        href="/novo/textlist" target="_blank" style="text-decoration: none;" rel="noopener noreferrer">Crie uma
        textlist</a> </label>
    <select class="form-select bg text-white border-secondary" name="textlist">

      {{#if haveTextlist}}
      <option value="{{textlistPost.id}}">{{textlistPost.titulo}}</option>
      {{/if}}
      <option value="NULL"> Sem Textlist </option>

      {{#each textlist}}
      <option value="{{id}}"> {{titulo}} </option>
      {{/each}}

    </select>
  </div>

  <input id="publicado" name="publicado" type="hidden" name="publicado" value="0" />
  <input id="btn-enviar" type="submit" onclick="this.form.publicado.value=1" class="btn-submit btn btn-light mx-1"
    value="Enviar">
  <input id="btn-rasc" type="submit" class="btn btn-dark mx-1" value="Rascunho">
  <div id="load" class="bg-dark">

  </div>
</form>

<script src="../../js/getBannerPost.js"></script>
<script async src="../../ckeditor/build/ckeditor.js"></script>
{{> _ckeditorJs}}