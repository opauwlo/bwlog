<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
  integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
<link rel="stylesheet" href="../../css/custom.css" async defer>
<link rel="stylesheet" href="../../css/build.css" async defer>

<div class="row p-2 ">
  <div class=" mx-auto">
    <!-- Profile widget -->
    <div class="overflow-hidden">
      <div class="px-3 pt-0 pb-4 rounded-3 mb-2"
        style=" background-image: url({{user.dataValues.banner}}); background-size: cover; background-repeat: no-repeat">
        <div class="media align-items-end profile-head rounded-circle">
          <div class="profile mr-3 rounded-circle"><img src="{{user.dataValues.profile}}" alt="..." width="110"
              style="object-fit: cover;" class="rounded-3 border-3 border-dark shadow-lg"></div>
          <div class="media-body mb-4 text-white">
            <h4 class="mt-1 mb-1">{{user.dataValues.user_name}}</h4>
            <p class="small mb-4"> <i class="fas fa-map-marker-alt mr-2"></i># {{user.dataValues.id}}</p>
          </div>
        </div>
      </div>

      <div hidden class="visually-hidden invisible g-signin2 " SignIndata-theme="dark"></div>
      <a href="/edit/{{user.dataValues.id}}" class="mx-3 mt-5 btn btn-outline-dark text-white btn-sm text-center">Editar
        Perfil</a>
      <a href="/logout" class="mt-5 btn btn-danger text-white btn-sm text-center float-end" onclick="signOut();">
        Sair
      </a>
      <div class="">
        <h5 class="mb-1 mt-2 text-white">Sobre</h5>
        <div class="p-4 rounded shadow-sm bg">
          <p class="font-italic text-white-50 mb-0" style="word-break: break-word;">
            {{user.dataValues.descricao}}
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
<div class=" new-post p-2 text-light">
  <div class="card text-white bg">

    <div class="new-post p-2 ">
      <ul class="nav nav-pills nav-justified mb-3 " id="pills-tab" role="tablist">
        <li class="nav-item " role="presentation">
          <button class="nav-link active shadow border-3" id="pills-home-tab" data-bs-toggle="pill"
            data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home"
            aria-selected="true">Publicas</button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link shadow border-3" id="pills-profile-tab" data-bs-toggle="pill"
            data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile"
            aria-selected="false">Rascunhos</button>
        </li>
        <li class="nav-item" role="presentation">
          <button class="nav-link shadow border-3" id="pills-textlist-tab" data-bs-toggle="pill"
            data-bs-target="#pills-textlist" type="button" role="tab" aria-controls="pills-textlist"
            aria-selected="false">Textlists</button>
        </li>
      </ul>
    </div>
  </div>
</div>
<div class="tab-content " id="pills-tabContent">
  <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
    <section class="row row-cols-md-1">
      {{#each posts}}
      {{#if dataValues.publicado}}
      <div class="col-lg-6 rounded-3 mb-3">
        <div class="card m-2 shadow text-center">
          <div class="card-body px-3 bg">
            <h2 class="card-title text-titulo text-light mb-2">{{dataValues.titulo}}</h2>
            <p class="card-text text-info text-format" style="margin-bottom: 0;">{{dataValues.descricao}}</p>
            <small class="text-secondary mt-1">by: {{user.dataValues.user_name}}</small>
            <div class="d-grid gap-2 p-3" role="group">
              <a href="/posts/{{dataValues.slug}}"
                class="text-white btn shadow btn-outline-dark fw-bold border-secondary">Ler</a>
              <a href="/edit/post/{{dataValues.id}}"
                class="btn btn-outline-dark border-secondary text-white fw-bold">Editar</a>
              <button type="button" class="btn btn-outline-dark border-secondary fw-bold text-white"
                data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                Deletar
              </button>
            </div>
          </div>
        </div>
      </div>
      <!-- Modal -->
      <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog text-secondary">
          <div class="modal-content bg text-secondary">
            <div class="modal-header bg text-secondary">
              <h5 class="modal-title text-danger" id="staticBackdropLabel">Deseja Deletar?</h5>
              <button type="button" class="btn-close btn-close-white" aria-label="Close"
                data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-white-50">
              ATENÇÃO, ao clicar em deletar o post será permanentemente excluido do banco de dados.
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Sair</button>
              <form action="/deletar/{{dataValues.id}}" method="POST">
                <button type="submit" class="btn btn-danger mx-1">Deletar</button>
              </form>
            </div>
          </div>
        </div>
      </div>
      {{/if}}
      {{/each}}
    </section>
  </div>
  <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
    <section class="row row-cols-md-1">
      {{#each posts}}
      {{#unless dataValues.publicado}}
      <div class="col-lg-6 rounded-3 mb-3">
        <div class="card m-2 shadow text-center ">
          <div class="card-body px-3 bg">
            <h2 class="card-title text-titulo text-light mb-2">{{dataValues.titulo}}</h2>
            <p class="card-text text-info text-format" style="margin-bottom: 0;">{{dataValues.descricao}}</p>
            <small class="text-secondary mt-1">by: {{user.dataValues.user_name}}</small>
            <div class="d-grid gap-2 p-3" role="group">
              <a href="/posts/preview/{{dataValues.slug}}"
                class="text-white btn shadow btn-outline-dark fw-bold border-secondary">Ler</a>
              <a href="/edit/post/{{dataValues.id}}"
                class="btn btn-outline-dark border-secondary text-white fw-bold">Editar</a>
              <button type="button" class="btn btn-outline-dark border-secondary fw-bold text-white"
                data-bs-toggle="modal" data-bs-target="#staticBackdropRasc">
                Deletar
              </button>
            </div>
          </div>
        </div>
      </div>
      <!-- Modal -->
      <div class="modal fade" id="staticBackdropRasc" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog text-secondary">
          <div class="modal-content bg text-secondary">
            <div class="modal-header bg text-secondary">
              <h5 class="modal-title text-danger" id="staticBackdropLabel">Deseja Deletar?</h5>
              <button type="button" class="btn-close btn-close-white" aria-label="Close"
                data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-white-50">
              ATENÇÃO, ao clicar em deletar o post será permanentemente excluido do banco de dados.
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Sair</button>
              <form action="/deletar/{{dataValues.id}}" method="POST">
                <button type="submit" class="btn btn-danger mx-1">Deletar</button>
              </form>
            </div>
          </div>
        </div>
      </div>
      {{/unless}}
      {{/each}}
    </section>
  </div>
  <div class="tab-pane fade" id="pills-textlist" role="tabpanel" aria-labelledby="pills-textlist-tab">
    <section class="row row-cols-md-1">
      {{#each textlists }}
      <div class="col-lg-6 rounded-3 mb-3">
        <div class="card m-2 shadow text-center ">
          <div class="card-body px-3 bg">
            <h2 class="card-title text-titulo text-light mb-2">{{dataValues.titulo}}</h2>
            <div class="d-grid gap-2 p-3" role="group">
              <a href="/textlist/{{dataValues.slug}}/{{dataValues.id}}"
                class="text-white btn shadow btn-outline-dark fw-bold border-secondary">Ver Posts</a>
              <a href="/edit/textlist/{{dataValues.id}}"
                class="btn btn-outline-dark border-secondary text-white fw-bold">Editar</a>
              <button type="button" class="btn btn-outline-dark border-secondary fw-bold text-white"
                data-bs-toggle="modal" data-bs-target="#staticBackdrops">
                Deletar
              </button>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </section>
  </div>
</div>

{{#each textlists}}
<!-- Modal -->
<div class="modal fade" id="staticBackdrops" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
  aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog text-secondary">
    <div class="modal-content bg text-secondary">
      <div class="modal-header bg text-secondary">
        <h5 class="modal-title text-danger" id="staticBackdropLabel">Deseja Deletar?</h5>
        <button type="button" class="btn-close btn-close-white" aria-label="Close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body text-white-50">
        ATENÇÃO, ao clicar em deletar a textlist será permanentemente excluida do banco de dados.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Sair</button>
        <form action="/deletar/textlist/{{dataValues.id}}" method="POST">
          <button type="submit" class="btn btn-danger mx-1">Deletar</button>
        </form>
      </div>
    </div>
  </div>
</div>
{{/each}}


{{> _newPost}}
{{{paginateHelper pagination}}}

