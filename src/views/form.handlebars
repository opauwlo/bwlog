<script src="../../ckeditor/build/ckeditor.js"></script>
<link rel="stylesheet" href="../../css/content-styles.css">
<link rel="stylesheet" href="../../css/prism.css">

<form action="/add" method="POST" class="p-3" id="form">


  <div class="form mb-3 p-2 mx-auto rounded-3">
    <fieldset disabled>
      <input  type="text" name="autor" class="form__input text-white-50 p-3 bg rounded-3" autocomplete="off" placeholder=" " value="{{user}}">
      <label class="form__label rounded-3 ">Autor(a)</label>
    </fieldset>
  </div>
  
	<hr class="text-dark">

	<div class="form mb-3 p-2 mx-auto">
    <input type="text" name="titulo" class="form__input bg rounded-3" autocomplete="off" placeholder=" " required>
    <label class="form__label rounded-3">Título</label>
  </div>

	<hr class="text-dark">

	<div class="form-text mb-3 p-2 mx-auto rounded-3">
    <textarea type="text" name="descricao" class="form__input bg rounded-3" autocomplete="on" placeholder=" " required></textarea>
    <label class="form__label rounded-3">Descriçao</label>
  </div>

	<hr class="text-dark">

  <div class="mb-3 p-2">
    <label class="form-label text-white">Conteudo do post</label>
    <textarea name="conteudo" class="form-control" id="validationTextarea"></textarea>
  </div>

  <div class="mb-3 p-2 bg-dark">
    <label class="form-label text-white" for="floatingInput">Salvar como:</label>
    <select class="form-select bg text-white border-3 border-secondary" name="publicado" required>
      <option value="true">Publico</option>
      <option value="false">Privado</option>
    </select>
  </div>
  <select class="visually-hidden-focusable form-select bg-dark text-light border-2 border-secondary" name="editado">
    <option value="false">Editdo</option>
  </select>
  <button type="submit" class="btn btn-primary mx-2">Enviar</button>

</form>

{{> _ckeditorJs}}
<script src="../../js/prism.js"></script>
