<link rel="stylesheet" href="/css/ckeditor.css">
<link rel="stylesheet" href="/css/prism.css">
{{#each posts}}

  <div class="bg-dark rounded-3 mt-1">
    <section class=" mx-2 mt-3 w-auto rounded-pill shadow">
      <div class="d-flex align-items-center my-2 text-light ">
        <div class="flex-shrink-0">
          <img class="rounded-circle w-50 border border-secondary"src="{{dataValues.foto}}" alt="profile picture">
        </div>
        <div class="flex-grow-0 float-start text-profile">
          <a class="text-white-50 fs-6" href="/autor/{{dataValues.id_user}}">
            {{dataValues.autor}}
          </a>
        </div>
      </div>
    </section>
    <div class="card-body px-4">
      <div class="text-white"> 
        <h1 class="mb-3 ">{{dataValues.titulo}}</h1>
      </div>
      <hr class="text-white-50 shadow-lg">
      <div class="text-white-50 mt-2">
        {{{dataValues.conteudo}}}
      </div>
      <p class="text-secondary mt-3 fst-italic fs-6 text-end">
        publicado em: {{#formatDate dataValues.createdAt}}{{/formatDate}}  {{#if dataValues.editado}}<smallclass="fw-light fst-normal text-blue mx-1"> post editado</small> {{/if}}
      </p>
    </div>
  </div>
  <section>
    <script src="https://utteranc.es/client.js"
            repo="opauwlo/social-blog"
            issue-term="pathname"
            label="Comentarios ✏️"
            theme="dark-blue"
            crossorigin="anonymous"
            async>
    </script>
  </section>
{{else}}
{{> _404}}
{{/each}}
{{> _ckeditorJs}}
{{> _loadingPage}}
<script src="/js/prism.js"></script>


