<div class=" new-post p-3">
  <form action="/search" >
    <div class="input-group shadow">
      <input type="text" name="term" class="form-control bg-dark shadow-sm rounded-start border-secondary text-light"placeholder="{{term}}">
      <button class="btn btn-outline-dark border-secondary rounded-end text-light m-auto" type="submit" id="button-addon2">
        <i class="bi bi-search text-white-50"></i>
      </button>
    </div>
  </form>
</div>

<section class="row row-cols-md-1 p-1 ">
  <div class="col rounded-3 mb-1">
    <div class="card bg-info m-2 shadow text-center">
      <div class="card-body px-3">
      Resultados para <small class="fst-italic fs-6 fw-bold">{{term}}</small>
      </div>
    </div>
  </div>
</section>

<section class="row row-cols-md-1 p-1 ">
  {{#each posts}}
    <div class="col-lg-6 rounded-3 mb-4">
      <div class="card bg-dark m-2 shadow text-center" >
        <div class="card-body px-3 ">
          <h1 class="card-title text-light fs-3 mb-2">{{dataValues.titulo}}</h1>
          <small class="text-info">{{dataValues.descricao}}</small>
          <p class="card-text text-secondary"> by: {{dataValues.autor}}</p>
          <div class="d-grid gap-2">
            <a href="/posts/{{dataValues.slug}}" class="btn shadow btn-outline-dark border-secondary text-light">Ler Mais!</a>
          </div>
          <hr class="text-light">
        </div>
      </div>
    </div>
    {{else}}
      <div class="col rounded-3 mb-4">
        <div class="card bg-dark m-2 shadow text-center">
          <div class="card-body px-3 text-light">
            <small class="fst-italic fs-6 fw-bold">:(</small> <br>
              Que tal buscar por um sinonimo?
          </div>
        </div>
      </div>
  {{/each}}
</section>