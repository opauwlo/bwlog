<title>Novo Post</title>
<script src="/ckeditor/build/ckeditor.js"></script>
<form action="/add" method="POST" class="p-3" id="form">


	<div class="form mb-3 p-2 mx-auto">
    <input type="text" name="autor" class="form__input" autocomplete="on" placeholder=" " required value="{{user.name}}">
    <label class="form__label">Autor (a)</label>
  </div>
  
	<hr class="text-dark">

	<div class="form mb-3 p-2 mx-auto visually-hidden invisible">
    <input type="text" name="email" class="form__input" placeholder=" " autocomplete="off" value="{{user.email}}">
    <label class="form__label">Email</label>
  </div>


	<div class="form mb-3 p-2 mx-auto visually-hidden invisible">
    <input type="text" name="foto" class="form__input" placeholder=" " autocomplete="off" value="{{user.picture}}">
    <label class="form__label">Url Foto</label>
  </div>

	<div class="form mb-3 p-2 mx-auto visually-hidden invisible">
    <input type="text" name="sub" class="form__input" placeholder="" autocomplete="off" value="{{user.sub}}">
    <label class="form__label">sub</label>
  </div>

	<div class="form mb-3 p-2 mx-auto">
    <input type="text" name="titulo" class="form__input" autocomplete="off" placeholder=" " required>
    <label class="form__label">Título</label>
  </div>

	<hr class="text-dark">

	<div class="form-text mb-3 p-2 mx-auto">
    <textarea type="text" name="descricao" class="form__input" autocomplete="on" placeholder=" " required></textarea>
    <label class="form__label">Descrição</label>
  </div>

	<hr class="text-dark">

  <div class="mb-3 p-2">
    <label class="form-label text-light">Conteudo do post</label>
    <textarea name="conteudo" class="form-control" id="conteudo"></textarea>
  </div>

  <div class="mb-3 p-2 bg-dark">
    <label class="form-label text-light bg-dark" for="floatingInput">Salvar como:</label>
    <select class="form-select bg-dark text-light border-2 border-secondary" name="publicado" required>
      <option value="true">Publico</option>
      <option value="false">Privado</option>
    </select>
  </div>
  <button type="submit" class="btn btn-primary mx-2">Enviar</button>

</form>


<script>ClassicEditor
			.create( document.querySelector( '#conteudo' ), {
				
				toolbar: {
					items: [
						'undo',
						'redo',
						'|',
						'bold',
						'underline',
						'italic',
						'|',
						'alignment',
						'|',
						'outdent',
						'indent',
						'|',
						'todoList',
						'bulletedList',
						'numberedList',
						'|',
						'fontFamily',
						'fontSize',
						'fontColor',
						'|',
						'code',
						'horizontalLine',
						'|'
					]
				},
				language: 'pt-br',
				licenseKey: '',
				
				
				
			} )
			.then( editor => {
				window.editor = editor;
		
				
				
				
			} )
			.catch( error => {
				console.error( 'Oops, something went wrong!' );
				console.error( 'Please, report the following error on https://github.com/ckeditor/ckeditor5/issues with the build id and the error stack trace:' );
				console.warn( 'Build id: 124s41fvxfoy-5sy8gb4yjfv' );
				console.error( error );
			} );
	</script>